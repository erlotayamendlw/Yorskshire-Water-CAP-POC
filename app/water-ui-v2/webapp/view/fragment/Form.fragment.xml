<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:sf="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified">
    <Dialog title="Final Recommendation">
        <VBox class="sapUiSmallMargin">
            <core:Icon src="sap-icon://ai" class="size1" color="#031E48">
                <core:layoutData>
                    <FlexItemData growFactor="1" />
                </core:layoutData>
            </core:Icon>
            <Title id="_IDGenTitle-f6" text="AI Recommendation" level="H1" />
            <!-- <Text id="panel2text-f6" text="Customer: Disruption to daily life, property damage, road closures, potential health risks from contaminated floodwater." /> -->

            <Text id="_IDGenTitle-f1" text="Impact:" />
            <Text id="panel2text-f1" text="Customer: Disruption to daily life, property damage, road closures, potential health risks from contaminated floodwater." />

            <Text id="_IDGenTitle-f2" text="Urgency and Priority:" />
            <Text id="panel2text-f2" text="High. The frequency and severity of high tide flooding are increasing, causing significant damage and disruption. The cost of mitigation and adaptation measures is substantial." />

            <Text id="_IDGenTitle-f3" text="Cause Category:" />
            <Text id="panel2text-f3" text="Sea level rise due to climate change and sinking land." />

            <Text id="_IDGenTitle-f4" text="Confidence Score for Cause:" />
            <ProgressIndicator class="sapUiSmallMarginBottom" percentValue="90" displayValue="90%" showValue="true" state="Success" />

            <Text id="_IDGenTitle-f5" text="Is the Problem Theirs?" />
            <Text id="panel2text-f5" text="No. The problem is primarily due to natural processes exacerbated by climate change, though human impacts on land subsidence play a role." />

            <VBox class="sapUiSmallMargin">
                <Title id="_IDGenTitle-f8" text="Final Comments" level="H1" />
                <TextArea id="analystComment" width="100%"></TextArea>
            </VBox>

            <VBox class="sapUiSmallMarginEnd">
                <Title text="Reportable to OFWAT?" />
                <RadioButtonGroup id="groupB" valueState="None">
                    <RadioButton text="Reportable" selected="true" />
                    <RadioButton text="Not Reportable" />
                </RadioButtonGroup>
            </VBox>

        </VBox>
        <HBox class="sapUiLargeMargin">
            <Button text="Submit" type="Emphasized" iconFirst="true" width="auto" iconDensityAware="false" press="onSubmitOK"/>
            <Button text="Cancel" type="Default" iconFirst="true" width="auto" iconDensityAware="false" press="onSubmitCancel"/>
        </HBox>
    </Dialog>
</core:FragmentDefinition>